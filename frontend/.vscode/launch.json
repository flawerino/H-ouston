// .vscode/launch.json
{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: Flask (frontend)",
        "type": "python",
        "request": "launch",
        "program": "${workspaceFolder}/main.py",
        "args": [],
        "cwd": "${workspaceFolder}",
        "env": {
          "FLASK_APP": "main.py",
          "FLASK_ENV": "development"
        },
        "stopOnEntry": false,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }